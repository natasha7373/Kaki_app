<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".sign_in">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="406dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:scaleX="1.8"
            android:scaleY="1.8"
            app:srcCompat="@drawable/top_head" />

        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_marginStart="50dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="50dp"
            android:fontFamily="@font/futura_bold"
            android:gravity="center"
            android:text="find a kaki"
            android:textAllCaps="true"
            android:textColor="#EE5C54"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/signup_subheader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/futura_bold"
            android:gravity="center"
            android:text="Post a Notice"
            android:textAllCaps="true"
            android:textColor="#A6000000"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/notice_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/signup_subheader"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/futura_bold"
            android:text="Notice Title"
            android:textColor="@color/black"
            android:textSize="30dp" />


        <EditText
            android:id="@+id/noticetitlebanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/notice_title"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/futura_bold"
            android:hint="e.g Want Mahjong Kaki"
            android:padding="20dp"
            android:textColorHint="#8F050505"
            android:textSize="28dp" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/noticetitlebanner"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/futura_bold"
            android:text="Location"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/location_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/location"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/futura_bold"
            android:hint="Pick a Location"
            android:padding="20dp"
            android:textColorHint="#8F050505"
            android:textSize="28dp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/location_banner"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/futura_bold"
            android:text="Date"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/date_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/futura_bold"
            android:hint="Select Date"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColorHint="#8F050505"
            android:textSize="30dp" />

        <ImageButton
            android:id="@+id/date_banner2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date"
            android:layout_marginStart="350dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/futura_bold"
            android:hint="Select Date"
            android:padding="10dp"
            android:src="@drawable/ic_baseline_create_24"
            android:textAlignment="center"
            android:textColorHint="#FFFFFF"
            android:textSize="34dp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/futura_bold"
            android:text="Time"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/time_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/time"
            android:layout_marginStart="10dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/futura_bold"
            android:hint="Select Time"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColorHint="#8F050505"
            android:textSize="30dp" />

        <ImageButton
            android:id="@+id/time_banner2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/time"
            android:layout_marginStart="350dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/futura_bold"
            android:hint="Select Time"
            android:padding="10dp"
            android:src="@drawable/ic_baseline_create_24"
            android:textAlignment="center"
            android:textColorHint="#FFFFFF"
            android:textSize="34dp" />

        <TextView
            android:id="@+id/notice_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/signup_subheader"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="560dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/futura_bold"
            android:text="Notice Description"
            android:textColor="@color/black"
            android:textSize="30dp" />


        <EditText
            android:id="@+id/noticedescbanner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/notice_desc"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/futura_bold"
            android:gravity="top"
            android:hint="e.g Mahjong players for a CC event. Join us for a fun night."
            android:padding="20dp"
            android:textColorHint="#8F050505"
            android:textSize="28dp" />

        <TextView
            android:id="@+id/attendee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/noticedescbanner"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/futura_bold"
            android:text="Number of Attendees"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <EditText
            android:id="@+id/attendee_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/attendee"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_corner"
            android:fontFamily="@font/futura_bold"
            android:padding="20dp"
            android:textColorHint="#8F050505"
            android:textSize="28dp" />


        <Button
            android:id="@+id/post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/attendee_banner"
            android:layout_marginStart="300dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_next"
            android:fontFamily="@font/futura_bold"
            android:hint="POST"
            app:backgroundTint="#EE5C54"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColorHint="#FFFFFF"
            android:textSize="34dp" />

        <ImageButton
            android:id="@+id/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:scaleX="2"
            android:scaleY="2"
            app:srcCompat="@drawable/ic_baseline_west" />

    </RelativeLayout>

</ScrollView>

